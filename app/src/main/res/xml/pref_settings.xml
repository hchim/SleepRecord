<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_user"
        android:key="pref_user_settings">

        <EditTextPreference
            android:capitalize="words"
            android:inputType="textCapWords"
            android:key="nickname_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_nickname" />

        <PreferenceScreen
            android:key="pref_password_settings"
            android:title="@string/pref_title_update_password"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_title_baby"
        android:key="pref_baby_settings">
        <PreferenceScreen
            android:key="pref_baby_info"
            android:title="@string/pref_title_baby_information"
            android:persistent="false"/>
    </PreferenceCategory>
</PreferenceScreen>
