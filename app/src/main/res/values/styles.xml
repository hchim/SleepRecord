<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavUsername" parent="TextAppearance.AppCompat.Title"></style>

    <style name="NavBabyName" parent="Base.TextAppearance.AppCompat.Subhead"></style>

    <!-- Main Activity Widget -->
    <style name="MainActivityWidget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin_bottom</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/widget_title_margin_bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="verifyEmailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/widget_title_margin_bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="Sign_in_up_button" parent="button">
        <item name="android:layout_marginLeft">@dimen/sign_in_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/sign_in_btn_margin</item>
        <item name="android:layout_marginTop">@dimen/form_item_margin_top</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="login_text_link">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:layout_marginTop">@dimen/form_item_margin_top</item>
        android:paddingTop="10dp"
    </style>

    <style name="sleep_records_list_view">
        <item name="android:dividerHeight">@dimen/sleep_record_list_divider_height</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subtitleText">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="planning_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="planning_linearlayout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/planning_item_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/planning_item_margin_bottom</item>
    </style>

    <style name="planning_title_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/planning_item_title_label_padding_left</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="planning_seekbar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
    </style>
    <style name="planning_time_label">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
