<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/view_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/whiteNoiseImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/grid_image"
                app:srcCompat="@drawable/whitenoise" />

            <ImageButton
                android:id="@+id/rainImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/grid_image"
                app:srcCompat="@drawable/rain" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/block_margin"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/oceanImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/grid_image"
                app:srcCompat="@drawable/ocean" />

            <ImageButton
                android:id="@+id/wombImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/grid_image"
                app:srcCompat="@drawable/womb" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/view_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/view_background"
            app:srcCompat="@drawable/ic_play_48dp" />
        <ImageButton
            android:id="@+id/timerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/view_background"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_timer_24dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/adWidget"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/block_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ad view will be dynamically added.-->
    </LinearLayout>
</LinearLayout>
