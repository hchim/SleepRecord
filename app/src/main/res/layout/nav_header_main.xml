<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/nav_header_padding_top"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="@dimen/nav_header_image_width"
        android:layout_height="@dimen/nav_header_image_height"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/nav_header_name_layout_padding"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HChen"
            android:textAppearance="@style/NavUsername" />

        <TextView
            android:id="@+id/babyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_baby_name_padding_top"
            android:textAppearance="@style/NavBabyName"
            android:text="Aiden 8 M 12 Days" />
    </LinearLayout>

</LinearLayout>
