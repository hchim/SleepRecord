<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/card_margin"
    card_view:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/sleep_record_title_padding"
            android:layout_marginEnd="@dimen/sleep_record_title_margin_right"
            android:id="@+id/titleView"
            style="@style/titleText" />

        <ImageButton
            android:id="@+id/delButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sleep_record_del_btn_padding"
            card_view:srcCompat="@drawable/ic_delete_white_24dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>